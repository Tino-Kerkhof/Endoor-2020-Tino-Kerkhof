function sum(a,b)
{
    var s = a+b;
    return s;
}

function voerSumUit()
{
    var getal1 = prompt("Wat is het eerste getal van de som?", '');
    var getal2 = prompt("Wat is het tweede getal van de som?", getal1);
    getal1++; getal1--;
    getal2++; getal2--;
    alert("Het product van " + getal1 + " en " + getal2 + " is " + sum(getal1, getal2));
}

voerSumUit();
voerSumUit();
voerSumUit();
